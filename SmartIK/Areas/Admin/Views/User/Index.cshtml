@model List<ApplicationUser>;
@{
    TempData["Title"] = "User List";
}

@section Link {
    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index" >Users</a></li>
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
            <a asp-area="Admin" asp-controller="User" asp-action="CMRegister" class="btn btn-warning float-sm-right">Add </a>

        </div><!-- /.col -->
    </div><!-- /.row -->
</div>

<div class="card">
    <div class="card-header bg-blue">
        <h3 class="card-title">Users</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-bordered table-hover  table-sm">
            <thead>
                <tr>
                    <th class="text-center align-middle">Image</th>
                    <th class="text-center align-middle">Full Name</th>
                    <th class="text-center align-middle">Email Address</th>
                    <th class="text-center align-middle">Company</th>
                    <th class="text-center align-middle">Title</th>
                    <th class="text-center align-middle">Identification Number</th>
                    <th class="text-center align-middle">Phone Number</th>
                    <th class="text-center align-middle">User Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            <img class="justify-content-center" src="~/img/@user.PicturePath" width="80" height="80" alt="@user.FirstName's photo" />
                        </td>
                        <td class="text-center align-middle">@user.FirstName @user.LastName</td>
                        <td class="text-center align-middle">@user.Email</td>
                        <td class="text-center align-middle">@user.Corparation.CompanyName</td>
                        <td class="text-center align-middle">@user.Title</td>
                        <td class="text-center align-middle">@user.TCKN</td>
                        <td class="text-center align-middle">@user.Phone</td>
                        <td class="text-center align-middle">
                            <a class="btn btn-outline-success btn-sil" asp-route-id="@user.Id" asp-controller="User" asp-action="Details">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Details
                            </a>
                            @*<a class="btn btn-outline-danger btn-sil" data-id="@user.Id" onclick="dlt(@user.Id)">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

