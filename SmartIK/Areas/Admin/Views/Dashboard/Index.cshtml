@model AdminIndexViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@if (TempData["Greetings"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Greetings"]
    </div>
}
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.Packages.Count()</h3>


                <p>Total Packages</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a asp-action="Packages" asp-controller="Package" asp-area="Admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.ActivePackageCount</h3>

                <p>Active Packages</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a asp-action="ActivePackages" asp-controller="Package" asp-area="Admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.PassivePackageCount</h3>

                <p>Passive Package</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-action="PassivePackages" asp-controller="Package" asp-area="admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.DeletedPackageCount</h3>

                <p>Deleted Packages</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a asp-action="DeletedPackages" asp-controller="Package" asp-area="admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-blue">
                <h3 class="card-title">Users</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="users-list clearfix">
                    @foreach (var item in Model.Users)
                    {
                        <li>
                            <img class="h-100 w-100" src="~/img/@item.PicturePath" alt="User Image">
                            <a class="users-list-name" asp-route-id="@item.Id" asp-controller="User" asp-action="Details">@item.FirstName @item.LastName</a>
                            <span class="users-list-date">@item.Title</span>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" asp-controller="User" >View All Users</a>
            </div>

        </div>

    </div>
</div>


@section Preloader{
    <div class="preloader flex-column justify-content-center align-items-center">
        @*<img class="animation__shake" src="~/Admin/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">*@
        <h1>SMART IK</h1>
    </div>
}