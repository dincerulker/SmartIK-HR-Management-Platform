@model AdvancePaymentCreateViewModel
@{
    ViewData["Title"] = "Advance Payment Create";
}

@section Link {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="AdvancePayment" asp-action="Index">Advances</a></li>
}

<div class="row">
    <div class="col-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Advance Payment</h3>
            </div>
            <form asp-action="Advances" asp-controller="AdvancePayment" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="mb-1">Desription</div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <textarea asp-for="Description" type="text" class="form-control" placeholder="Descripion"></textarea>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <div class="d-flex">
                            <div class="d-flex align-items-center">Amount: </div>
                            <input class="ml-2" style="width:300px;" asp-for="AdvanceAmount" type="range" min="1000" step="100" orient="vertical" max="@((decimal)(Model.applicationUser.Salary*3.6))" id="rFont">

                            <div id="kutu" class="d-flex align-items-center ml-2"> <span class="color : green"></span></div>
                            <div class="d-flex align-items-center ml-1"> $</div>

                            <script>
                                rFont.oninput = function () {
                                    document.getElementById("kutu").textContent = rFont.value;
                                }
                            </script>
                        </div>
                        <div>
                            <button class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

