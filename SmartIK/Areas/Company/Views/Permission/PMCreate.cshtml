@using SmartIK.Areas.Company.Enums
@model PermissionCreateViewModel
@if (TempData["Message"] != null)
{
    <div class="bg-danger text-center p-3 mb-2" style="border-radius: 15px;">
        @TempData["Message"]
    </div>
}
@{
    ViewData["Title"] = "";
}

@section Link {
    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Permission" asp-action="Permissions">Permissions</a></li>
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<style>
    #box {
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
    }
</style>
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Permission Create</h3>
    </div>
    <div class="  m-3 m-auto" style="max-width:1100px;">
        <div class="card-body">
            <div id="box" class="row">
                <div class="col">
                    <form asp-action="PMCreate" asp-controller="Permission" method="post" enctype="multipart/form-data">
