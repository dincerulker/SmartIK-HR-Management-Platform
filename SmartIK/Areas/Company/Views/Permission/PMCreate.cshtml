                            <input asp-for="PermissionStartDate" id="minDate" value="6/12/2023:15:37 AM" type="date" placeholder="dd-mm-yyyy" class="form-control">
                            <span class="text-danger" asp-validation-for="PermissionStartDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PermissionEndDate"></label>
                            <input disabled id="EndDate" asp-for="PermissionEndDate" value="6/12/2023:15:37 AM" type="date" placeholder="dd-mm-yyyy" class="form-control">
                            <span class="text-danger" asp-validation-for="PermissionEndDate"></span>
                        </div>

                        <div>
                            <div class="col-md-4"></div>
                            <button class="btn btn-primary mb-1 " asp-action="PMCreate" asp-controller="Permission">Create</button>
