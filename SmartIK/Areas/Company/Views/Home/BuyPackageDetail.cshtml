@model BuyPackageViewModel
<div class="container">
    <br />
    <div class="row">
        <form method="post">
            <input hidden asp-for="PackageId" />
  

            <div class="card mb-3" style="max-width: 540px; height:250px; ">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Package.PicturePath" style="height:250px;" class="img-fluid rounded-start" alt="...">
                    </div>
                   
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="text-center row">

                                    <h5 class="card-title justify-content-between text-center font-weight-bold">@Model.Package.PackageName</h5>

                                </div>
                                <div class="row">
                                    <div class="col-7"> Package Price : </div>
                                    <div class="col-5">@Model.Package.PackagePrice.ToString() </div>
                                </div>
                                <div class="row">
                                    <div class="col-7"> PackageDescription : </div>
                                    <div class="col-5">@Model.Package.PackageDescription </div>
                                </div>
                                <div class="row">
                                    <div class="col-7"> Max Personel Count : </div>
                                    <div class="col-5">@Model.Package.PersonalCount </div>
                                </div>
                                <div class="row justify-content: flex-end ">
                                    <div class="col-7">  <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary form-control mt-2"><i class="bi bi-house-door"></i>Home </a> </div>
                                    <div class="col-5"> <button type="submit" class="btn btn-success form-control mt-2"><i class="bi bi-cart4"></i>Buy</button> </div>
                                </div>



                            
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>